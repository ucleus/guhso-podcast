 datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
 }

 generator client {
  provider = "prisma-client-js"
 }

 model User {
  id        String   @id @default(uuid())
  email     String   @unique
  bookings  Booking[]
 }

 model Service {
  id       String   @id @default(uuid())
  name     String
  duration Int
  price    Int
  bookings Booking[]
 }

 model Booking {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId String
  start     DateTime
  end       DateTime
  status    String   @default("PENDING")
  Payment   Payment?
 }

 model Payment {
  id        String   @id @default(uuid())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId String
  status    String
 }
